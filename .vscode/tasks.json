{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "compile verilog",
			"type": "shell",
			"options": {
				"cwd": "${fileDirname}"
			},
			"command": "${workspaceFolder}/scripts/compile-all-verilog.sh",
			"args": [
				"${fileDirname}",
			],
			"problemMatcher": [
				{
					"owner": "iverilog",
					"fileLocation": ["absolute"],
					"pattern": {
						"regexp": "^([^:]+):(\\d+)(?::(\\d+))?:\\s*(error|warning):?\\s*(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"severity": 4,
						"message": 5
					}
				}
			],
			"group": "build"
		},
		{
			"label": "run gtkwave",
			"type": "shell",
			"options": {
				"cwd": "${fileDirname}"
			},
			"command": "gtkwave",
			"args": [
				"dump.vcd"
			],
			"group": "build"
		},
		{
			"label": "compile verilog and run gtkwave",
			"type": "shell",
			"options": {
				"cwd": "${fileDirname}"
			},
			"command": "gtkwave",
			"args": [
				"dump.vcd"
			],
			"dependsOn": [
				"compile verilog",
			],
			"group": "build",
		}
	]
}