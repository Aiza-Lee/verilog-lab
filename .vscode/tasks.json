{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "compile verilog",
			"type": "shell",
			"options": {
				"cwd": "${fileDirname}"
			},
			"command": "iverilog",
			"args": [
				"-Wall",
				"-o",
				"${fileBasenameNoExtension}_tb.vvp",
				"${fileBasenameNoExtension}.v",
				"${fileBasenameNoExtension}_tb.v",
				"&&",
				"vvp",
				"${fileBasenameNoExtension}_tb.vvp",
			],
			"group": "build"
		},
		{
			"label": "run gtkwave",
			"type": "shell",
			"options": {
				"cwd": "${fileDirname}"
			},
			"command": "gtkwave",
			"args": [
				"dump.vcd"
			],
			"group": "build"
		},
		{
			"label": "compile verilog and run gtkwave",
			"type": "shell",
			"options": {
				"cwd": "${fileDirname}"
			},
			"command": "gtkwave",
			"args": [
				"dump.vcd"
			],
			"dependsOn": [
				"compile verilog",
			],
			"group": "build",
		}
	]
}